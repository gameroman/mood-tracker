<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body>
  <main>
    <div class="view_header">
      <div>
        <b>home</b>
        <% if (user) { %>
          &squarf; <a href="/<%= user.username %>">profile</a>
          &squarf; <a href="/settings">settings</a>
        <% } else { %>
          &squarf; <a href="/auth/login">login</a>
          &squarf; <a href="/auth/register">register</a>
        <% } %>
      </div>
    </div>

    <% if (user) { %>
      <p>
        <% const feelings = ["good", "alright", "okay", "well", "happy"] %>
        <% const days = ["an awesome", "an amazing", "a good", "a happy", "a wonderful", "a great", "a nice"] %>

        <% const feeling = feelings[Math.floor(Math.random() * feelings.length)] %>
        <% const day = days[Math.floor(Math.random() * days.length)] %>

        <% const greetings = [
          `Hope you're having ${day} day`,
          `Hope you have ${day} day`,
          `Hope you're doing ${feeling}`,
          `Hope you're ${feeling}`,
          `Hope you feel ${feeling}`,
        ]; %>

        <%= greetings[Math.floor(Math.random() * greetings.length)] %>,
        <a class="username" href="/<%= user.username %>">@<%= user.username %></a>!
      </p>
    <% } else { %>
      <p>A simple mood tracker</p>
      <a style="font-size: 1.2em" class="gradient" href="/auth/register">Create your own profile!</a>
      <br>
    <% } %>

    <br>
    <p class="gray noselect">
      <a class="gray" href="https://github.com/zptr1/mood-tracker">GitHub</a> &squarf; <a class="gray" href="/privacy">Privacy Policy</a>
    </p>
  </main>
</body>
</html>
